<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlApp_pry01.MainPage">

    <!---First App, developed by Alexander Araya Vega-->
    <StackLayout>

        <BoxView x:Name="boxColor"
                 BackgroundColor="Black"
                 HeightRequest="300"/>
        
        <Label Margin="25,30,0,0"
                   Text="Red"/>

        <!---The Slider for the Red color-->
        <Slider x:Name="redSlider"
                Margin="15,0,0,0"
                ThumbColor="Red"
                MinimumTrackColor="Black"
                ValueChanged="ChangeColor"/>

        <Label Margin="25,30,0,0"
                   Text="Green"/>

        <!---The Slider for the Green color-->
        <Slider x:Name="greenSlider"
                Margin="15,0,0,0"
                ThumbColor="LightGreen"
                MinimumTrackColor="Black"
                ValueChanged="ChangeColor"/>
        
        <Label Margin="25,30,0,0"
                   Text="Blue"/>

        <!---The Slider for the Blue color-->
        <Slider x:Name="blueSlider"
                Margin="15,0,0,0"
                ThumbColor="LightBlue"
                MinimumTrackColor="Black"
                ValueChanged="ChangeColor"/>

        <Label Text="Value Hexadecimal: "
               x:Name="lblDisplay"/>




    </StackLayout>

</ContentPage>
